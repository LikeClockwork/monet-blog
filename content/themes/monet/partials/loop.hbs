{{! Previous/next page links - only displayed on page 2+ }}
<div class="row page-nav">
  {{pagination}}
</div>
<div class="row">
  {{! This is the post loop - each post will be output using this markup }}
  {{#foreach posts}}
    {{#cond @index '==' 0}}

      <div class="col-md-12 bgify" style="background-image: url({{image}});">
        <div class="bg-overlay"></div>
        <div class="main-content">
          <div class="inner-content">
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <p>{{excerpt words=50}} <a href="{{url}}">...</a> </p>
            <p class="post-meta">
              {{#if author.image}}<span><img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" /></span>{{/if}}
              <span class="auth">
                Posted by {{author}} {{tags prefix=" on " limit= 3}}
              <br>
              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </span>
            </p>
          </div>
        </div>
      </div>

      {{else}}
        <div class="col-md-6 bgify" style="background-image: url({{image}});">
          {{#cond @index '==' 1}}
            <div class="bg-overlay" style="background-color: rgba(255, 194, 0, 0.6);"></div>
          {{/cond}}
          {{#cond @index '==' 2}}
            <div class="bg-overlay" style="background-color: rgba(103, 159, 210, 0.6);"></div>
          {{/cond}}
          {{#cond @index '==' 3}}
            <div class="bg-overlay" style="background-color: rgba(31, 26, 178, 0.6);"></div>
          {{/cond}}
          {{#cond @index '==' 4}}
            <div class="bg-overlay" style="background-color: rgba(255, 221, 115, 0.6);"></div>
          {{/cond}}
          <div class="sub-content">
            <div class="inner-content {{#cond @index '==' 2}}invert{{/cond}}{{#cond @index '==' 3}}invert{{/cond}}">

              <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
              <p>{{excerpt words=50}} <a href="{{url}}">...</a></p>
              <p class="post-meta">
                {{#if author.image}}<span><img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" /></span>{{/if}}
                <span class="auth">
                  Posted by {{author}} {{tags prefix=" on " limit= 1}}
                <br>
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
              </span>
              </p>
            </div>
          </div>
        </div>
    {{/cond}}
  {{/foreach}}
</div>

{{! Previous/next page links - displayed on every page }}
<div class="row page-nav">
  {{pagination}}
</div>
