{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}



  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="post-hf">
        <h1 class="post-title">{{title}}</h1>
      </div>
      <div class="post-content">
        {{content}}
      </div>
      <div class="post-hf">
          <p class="post-meta">
            {{#if author.image}}<span><img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" /></span>{{/if}}
            <span class="auth">
              Posted by {{author}} {{tags prefix=" on "}}
            <br>
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
          </span>
          </p>
        <p>Share this post
          <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <span class=""><i class="fa fa-twitter-square" aria-hidden="true"></i> Twitter </span>
          </a>
          or
          <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <span class=""> <i class="fa fa-facebook-square" aria-hidden="true"></i> Facebook</span>
          </a>
        </p>
      </div>


    </div>
  </div>

{{/post}}
